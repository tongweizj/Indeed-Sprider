<%- include('./includes/head.ejs') %>
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
  <%- include('./includes/navigation.ejs') %>

  <main role="main" class="container">
    <div class="row">
      <div class="col-md-8 blog-main">
        <div class="mp-nav mb-3">
          <span class="jobs-title">Jobs </span>
          <ul class="nav float-right">
            <li class="nav-item">
              <a class="nav-link <%= jobTitle === 'All' ? 'active' : '' %>" href="#">全部</a>
            </li>
            <li class="nav-item">
              <a class="nav-link <%= jobTitle === 'ML' ? 'active' : '' %>" href="/jds/Machine_Learning_Engineer">Machine Learning</a>
            </li>
            <li class="nav-item">
              <a class="nav-link <%= jobTitle === 'FS' ? 'active' : '' %>" href="/jds/Full_Stack_Developer">Full Stack</a>
            </li>
          </ul>
        </div>
        
        <div class="js-list bg-white">
          <div class="list-group jd-group">
            <% if (jds.length > 0) { %>
              <% for (let jd of jds) { %>
                <a href="<%= jd.url %>" class="jd-card jd-group-item " target="_blank">
                  <div class="row no-gutters">
                    <div class="col-md-2">
                      <img src="/img/jd-company-logo.png" class="card-img jd-company-logo" alt="jd-company-logo">
                    </div>
                    <div class="col-md-10">
                      <div class="d-flex w-100 justify-content-between card-title">
                        <h5 class="mb-1"><%= jd.title %></h5>
                        <small><%= jd.postDate %></small>
                      </div>
                      <p class="mb-1"><%= jd.summary %></p>
                      <small class="text-muted"><%= jd.company %></small> - 
                      <small class="text-muted"><%= jd.location %></small> - 
                      <small class="text-muted"><%= jd.salary %></small>
                    </div>  
                  </div>
                </a> <!-- /.jd-post -->
              <% } %>
            <% } else { %>
              <h1>No Products Found!</h1>
            <% } %>
          </div>
        </div>
      </div><!-- /.jd-main -->

      <aside class="col-md-4 jd-sidebar">
        <div class="p-4 mb-3 bg-white rounded">
          <h4 class="sidebar-box-title">right</h4>
          <p class="mb-0">我们这这个区域，可以放我们的课程广告.</p>
        </div><!-- /.top-ad -->

        <div class="sidebar-ad2 mb-3 bg-white rounded">
          <img src="/img/sidebar-ad.gif">
        </div><!-- /.top-ad2 -->

        <div class="p-4 mb-3 bg-white rounded">
          <h5 class="sidebar-box-title">right</h4>
          <p class="mb-0">我们这这个区域，可以放我们的课程广告.</p>
        </div><!-- /.top-download -->
        <div class="card mb-3">
          <div class="card-body">
            <h5 class="sidebar-box-title">免费课程分享</h5>
            <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
            <a href="#" class="btn btn-primary">Button</a>
          </div>
        </div>
      </aside><!-- /.jd-sidebar -->

    </div><!-- /.row -->

  </main>

  <%- include('./includes/end.ejs') %>